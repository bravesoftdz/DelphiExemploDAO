unit Unit1;

interface

uses
  Data.SqlExpr;

type
  TRegisterVariable = class

  strict private
    class var FConnDB: Pointer;
  private
    class function GetConnDB: TSQLConnection; static;

  public
    class property ConnDB: TSQLConnection read GetConnDB;

    class procedure Register( const APointer: Pointer );
  end;

implementation

{ TRegisterVariable }

class function TRegisterVariable.GetConnDB: TSQLConnection;
begin
  Result:= @FConnDB;
end;

class procedure TRegisterVariable.Register(const APointer: Pointer);
begin
  FConnDB:= APointer;
end;


end.
