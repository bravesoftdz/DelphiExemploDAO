{
  Data Acesses Object
  Classe base para declaração de métodos usados nas classes herdadas
}

unit DAO.Base;

interface

uses
  SysUtils,
  SqlExpr,
  Util.Conexao.Instancia.SQLDataSet,
  Util.Conexao.SGBD.Firebird25;

type
  EDAOErro = class( Exception );

  IDAO = interface
    ['{217E3C5E-61C0-4C7A-9380-B41DD939D978}']
  end;

  TDAOBase = class( TInterfacedObject, IDAO )
  public
    procedure ExecutarComandoSQL( const AComandoSQL: string );
  end;

resourcestring
  RSComandoSQLNaoDefinido = 'Comando SQL não definido [TAOBase.ExecutarComandoSQL]';

implementation

{ TAOBasen }


procedure TDAOBase.ExecutarComandoSQL(const AComandoSQL: string);
begin
  if ( AComandoSQL = EmptyStr ) then
    raise EDAOErro.Create( RSComandoSQLNaoDefinido);

  TUtilConexaoSGBDFirebird25Singleton.Instance.ExecuteDirect( AComandoSQL );
end;


end.
